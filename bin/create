#!/usr/bin/env zsh

function _error {
  echo 'error: ' $1 >&2
}

function _usage {
  cat <<'USAGE'
usage: create [-M] XX--Assignment-Name

  create a `README.md` file in `XX--Assignment-Name/` copying the contents of
  `.template/TUESDAY.md` or the file named `$TEMPLATE`, if provided.
USAGE
}


if [[ $# -lt 1 ]]; then
  _error 'missing argument'
  _usage; exit 1
fi

git checkout -b $1:l \
  && ginstall -vCD .templates/${TEMPLATE:-'TUESDAY.md'} $1/README.md \
  && git add $1 \
  && git status -s

# vim: ft=zsh
